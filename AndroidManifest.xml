            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".Input"
      
            android:label="@string/app_name" >
       
        </activity>
         <activity
            android:name="zxing.moyan.index"
      
            android:label="@string/app_name" >
       
        </activity>
